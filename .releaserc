{
    "branches": [
        "main",
        "next"
    ],
    "plugins": [
        [
            "@semantic-release/commit-analyzer",
            {
                "preset": "angular",
                "parserOpts": {
                    "noteKeywords": [
                        "BREAKING CHANGE",
                        "BREAKING CHANGES",
                        "BREAKING"
                    ]
                },
                "releaseRules": [
                    {
                        "type": "refactor",
                        "release": "patch"
                    },
                    {
                        "type": "docs",
                        "scope": "README",
                        "release": "patch"
                    },
                    {
                        "type": "ci",
                        "release": "patch"
                    },
                    {
                        "scope": "no-release",
                        "release": false
                    }
                ]
            }
        ],
        [
            "@semantic-release/release-notes-generator",
            {
                "preset": "conventionalcommits",
                "presetConfig": {
                    "types": [
                        {
                            "type": "feat",
                            "section": "‚ú® Features"
                        },
                        {
                            "type": "fix",
                            "section": "üêõ Bug Fixes"
                        },
                        {
                            "type": "refactor",
                            "section": "‚ôªÔ∏è Refactoring",
                            "hidden": false
                        },
                        {
                            "type": "ci",
                            "section": "üîß CI/CD",
                            "hidden": false
                        },
                        {
                            "type": "docs",
                            "section": "üìù Documentation",
                            "hidden": false
                        },
                        {
                            "type": "perf",
                            "section": "üöÄ Performance"
                        }
                    ]
                },
                "writerOpts": {
                    "commitsSort": [
                        "subject",
                        "scope"
                    ],
                    "linkCompare": false
                }
            }
        ],
        [
            "@semantic-release/npm",
            {
                "npmPublish": false
            }
        ],
        [
            "@semantic-release/exec",
            {
                "prepareCmd": "yarn version --non-interactive && yarn build:prod"
            }
        ],
        [
            "@semantic-release/git",
            {
                "assets": [
                    "package.json"
                ],
                "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
            }
        ],
        [
            "@semantic-release/github",
            {
                "assets": [
                    {
                        "path": "dist/*.user.js",
                        "label": "IITC Shard Observer Plugin (User Script)"
                    },
                    {
                        "path": "dist/*.meta.js",
                        "label": "IITC Shard Observer Plugin (Meta Script)"
                    }
                ],
                "addReleases": "bottom"
            }
        ]
    ]
}
